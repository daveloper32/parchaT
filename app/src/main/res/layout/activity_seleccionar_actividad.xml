<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.seleccionar_actividad.SeleccionarActividad"
    >

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_seleccionar_actividad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_fondo_actividades"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tV_SeleccionarActividad_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_horizontal"
                    android:text="@string/tV_SeleccionarActividad_titulo"
                    android:textColor="#514B4B"
                    android:textSize="24sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cV_SeleccionarActividad_restaurantes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="?attr/colorBackgroundFloating"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:id="@+id/LL_SeleccionarActividad_restaurantes"
                            android:layout_width="wrap_content"

                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_actividades_comida"
                                android:button="@null"
                                android:contentDescription="@string/tV_SeleccionarActividad_restaurantes"
                                android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/tV_SeleccionarActividad_restaurantes"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="@string/tV_SeleccionarActividad_restaurantes"
                                android:textColor="@color/blue_darky" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cV_SeleccionarActividad_musica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="?attr/colorBackgroundFloating"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/LL_SeleccionarActividad_musica"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_actividades_musica"
                                android:button="@null"
                                android:contentDescription="@string/tV_SeleccionarActividad_musica"
                                android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/tV_SeleccionarActividad_musica"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="@string/tV_SeleccionarActividad_musica"
                                android:textColor="@color/blue_darky" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cV_SeleccionarActividad_cine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="?attr/colorBackgroundFloating"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/LL_SeleccionarActividad_cine"
                            android:layout_width="wrap_content"

                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_actividades_cine"
                                android:button="@null"
                                android:contentDescription="@string/tV_SeleccionarActividad_cine"
                                android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/tV_SeleccionarActividad_cine"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="@string/tV_SeleccionarActividad_cine"
                                android:textColor="@color/blue_darky" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cV_SeleccionarActividad_areasVerdes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="?attr/colorBackgroundFloating"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/LL_SeleccionarActividad_areasVerdes"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_actividades_zonas_verdes"
                                android:button="@null"
                                android:contentDescription="@string/tV_SeleccionarActividad_areasVerdes"
                                android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/tV_SeleccionarActividad_areasVerdes"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="@string/tV_SeleccionarActividad_areasVerdes"
                                android:textColor="@color/blue_darky" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cV_SeleccionarActividad_arte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="?attr/colorBackgroundFloating"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/LL_SeleccionarActividad_arte"
                            android:layout_width="wrap_content"

                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_actividades_arte"
                                android:button="@null"
                                android:contentDescription="@string/tV_SeleccionarActividad_arte"
                                android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/tV_SeleccionarActividad_arte"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="@string/tV_SeleccionarActividad_arte"
                                android:textColor="@color/blue_darky" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cV_SeleccionarActividad_sorpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="?attr/colorBackgroundFloating"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/LL_SeleccionarActividad_sorpresa"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_actividades_sorpresa"
                                android:button="@null"
                                android:contentDescription="@string/tV_SeleccionarActividad_sorpresa"
                                android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/tV_SeleccionarActividad_sorpresa"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="@string/tV_SeleccionarActividad_sorpresa"
                                android:textColor="@color/blue_darky" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <Button
                    android:id="@+id/b_SeleccionarActividad_continuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_redondeo_button"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/b_SeleccionarActividad_continuar"
                    app:backgroundTint="#FF5328" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>