<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.perfil_usuario.PerfilUsuario">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_perfil_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_fondo_perfil"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tV_perfUsuario_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_horizontal"
                    android:text="@string/tV_perfUsuario_titulo"
                    android:textColor="#FF5328"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgV_perfUsuario_fotoUsuario"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/imgV_perfUsuario_fotoUsuario_contDes"
                    android:src="@drawable/ic_mi_imagen"
                    tools:src="@drawable/ic_mi_imagen" />

                <TextView
                    android:id="@+id/tV_perfUsuario_cambiarFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/tV_perfUsuario_cambiarFoto"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/style_redondeo_edittext"
                    android:textColorHint="#000000"
                    app:boxStrokeColor="#ABFFFFFF"
                    app:endIconMode="clear_text"
                    app:endIconTint="#9EE6D5D5"
                    app:hintTextColor="#B0040404"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="#A19D9D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eT_perfUsuario_nombreCom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_redondeo_edittext"
                        android:enabled="false"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="@string/eT_perfUsuario_nomCompleto"
                        android:inputType="textPersonName"
                        android:textColor="#9E000000"
                        android:textCursorDrawable="@drawable/style_black_cursor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/style_redondeo_edittext"
                    android:textColorHint="#000000"
                    app:boxStrokeColor="#ABFFFFFF"
                    app:endIconMode="clear_text"
                    app:endIconTint="#9EE6D5D5"
                    app:hintTextColor="#B0040404"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="#A19D9D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eT_perfUsuario_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_redondeo_edittext"
                        android:enabled="false"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="@string/eT_perfUsuario_correo"
                        android:inputType="textEmailAddress"
                        android:textColor="#9E000000"
                        android:textCursorDrawable="@drawable/style_black_cursor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/style_redondeo_edittext"
                    android:textColorHint="#000000"
                    app:boxStrokeColor="#ABFFFFFF"
                    app:endIconMode="clear_text"
                    app:endIconTint="#9EE6D5D5"
                    app:hintTextColor="#B0040404"
                    app:startIconDrawable="@android:drawable/stat_sys_phone_call"
                    app:startIconTint="#A19D9D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eT_perfUsuario_numero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_redondeo_edittext"
                        android:enabled="false"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="@string/eT_perfUsuario_celular"
                        android:inputType="number"
                        android:textColor="#9E000000"
                        android:textCursorDrawable="@drawable/style_black_cursor" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imgV_login_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/imgV_perfUsuario_logo_contDes"
                    app:srcCompat="@drawable/ic_logo_parchat"
                    tools:srcCompat="@drawable/ic_logo_parchat" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pB_perfilUsuario"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/include" />

</androidx.constraintlayout.widget.ConstraintLayout>